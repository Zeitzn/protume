@model List<ecommerce.protume.Models.DataBase.productoImagen>
<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-xs-6 col-md-3">
            <a href="~/ImgProductos/@i.imagen" class="thumbnail" target="_blank">
                <img src="~/ImgProductos/@i.imagen" alt="ejemplo">
            </a>
            <p class="text-center">
                <a href="#" class="btn btn-danger" role="button"
                   onclick="EliminarImagen(@i.id)">Eliminar</a>
            </p>
        </div>
    }
</div>


@*@section scriptsAdmin{*@

    <script>

    function EliminarImagen(ImagenId) {
        $.ajax({
            data: { ProductoImagenId: ImagenId },
            url: '@Url.Action("EliminarImagen","Articulos")',
            type: 'post',
            success: function (r) {
                if (r.respuesta) {
                    CargarAdjuntos();
                }
                else
                    alert(r.error);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown); 
                 }
        });
    }
    </script>


@*}*@
