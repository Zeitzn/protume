@model ecommerce.protume.Models.DataBase.detallePedido

@{
    ViewBag.Title = "Detalles";
}

<h2>@ViewBag.Title de Pedido</h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">
        <div class="form-group">
            <dt>
                Producto
            </dt>

            <dd>
                @*@Html.TextBoxFor(model => model.detalleProducto.producto.nombre)*@
                @Html.EditorFor(model => model.detalleProducto.producto.nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Nombres
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.pedido.cliente.nombre)*@
                @Html.EditorFor(model => model.pedido.cliente.nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Apellidos
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.pedido.cliente.apellidos)*@
                @Html.EditorFor(model => model.pedido.cliente.apellidos, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </dd>
        </div>


        <div class="form-group">
            <dt>
                Dirección de envío
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.pedido.cliente.direccion_envio)*@
                @Html.EditorFor(model => model.pedido.cliente.direccion_envio, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Precio unitario (S/)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.detalleProducto.producto.precio)*@
                @Html.EditorFor(model => model.detalleProducto.producto.precio, new { htmlAttributes = new { @class = "form-control", @disabled = "true", @id = "precio_unitario" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Cantidad
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.cantidad)*@
                @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control", @disabled = "true", @id = "cantidad" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Estado
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.pedido.estado)*@
                @Html.EditorFor(model => model.pedido.estado, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </dd>
        </div>

        <div class="form-group">
            <dt>
                Total (S/)
            </dt>

            <dd>
                <div id="total"></div>
            </dd>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>

@section scripts{

<script>
    var precio_unitario = $("#precio_unitario").val();
    var cantidad = $("#cantidad").val();
    var precio_total = parseFloat(precio_unitario) * parseInt(cantidad);

    $("#total").html(precio_total);

</script>    
    
}